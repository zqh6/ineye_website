.signContainer{
  position: relative;
}
.wordCenter{
  text-align: center;
}
.font16{
  font-size: 16px;
}
.kepu_content{
  border: 1px solid #ccc;
  padding: 8px;
  position: relative;
}
.kepu_content:before{
  content: " ";
  position: absolute;
  width: 100%;
  height: 100%;
  transform: rotate(-3deg);
  border: 1px solid #ccc;
}
.pad-10{
  padding: 10px;
}
.mart-20{
  margin-top: 20px;
}


