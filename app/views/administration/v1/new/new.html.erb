<div class="am-g tpl-g">
	<!-- 头部 -->
	<%= render partial: 'administration/v1/shared/navigation_bar' %>
	<!-- 风格切换 -->
	<%= render partial: 'administration/v1/shared/change_theme' %>
	<!-- 侧边导航栏 -->
	<%= render partial: 'administration/v1/shared/sidebar', locals: { options: {list_item: 'new_new'}} %>

	<!-- 内容区域 -->
	<div class="tpl-content-wrapper">

		<div class="row-content am-cf">

			<div class="row">

				<div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
					<div class="widget am-cf">
						<div class="widget-head am-cf">
							<div class="widget-title am-fl">新增新闻</div>
							<div class="widget-function am-fr">
								<a href="javascript:;" class="am-icon-paperclip"></a>
							</div>
						</div>
						<div class="widget-body am-fr">

							<form class="am-form tpl-form-line-form">
								<div class="am-form-group">
									<label for="user-name" class="am-u-sm-3 am-form-label"><span class="required-hint">*</span><%= New.human_attribute_name :title %> <span class="tpl-form-line-small-title"><%= :title.to_s.titleize %></span></label>
									<div class="am-u-sm-9">
										<%= text_field_tag :title, nil, class: 'tpl-form-input' %>
									</div>
								</div>

								<div class="am-form-group">
									<label for="user-name" class="am-u-sm-3 am-form-label"><%= New.human_attribute_name :vice_title %> <span class="tpl-form-line-small-title"><%= :vice_title.to_s.titleize %></span></label>
									<div class="am-u-sm-9">
										<%= text_field_tag :vice_title, nil, class: 'tpl-form-input' %>
									</div>
								</div>

								<div class="am-form-group">
									<label for="user-email" class="am-u-sm-3 am-form-label"><span class="required-hint">*</span><%= New.human_attribute_name :occurred_at %> <span class="tpl-form-line-small-title"><%= :occurred_at.to_s.titleize %></span></label>
									<div class="am-u-sm-9">
										<%= text_field_tag :occurred_at, nil, class: 'am-form-field tpl-form-no-bg', :"data-am-datepicker" => "", readonly: "" %>
									</div>
								</div>

								<div class="am-form-group">
									<label for="user-phone" class="am-u-sm-3 am-form-label"><%= New.human_attribute_name :classify %> <span class="tpl-form-line-small-title"><%= :classify.to_s.titleize %></span></label>
									<div class="am-u-sm-9">
										<%= select_tag :classify, options_for_select(NewClassify.form_options, '1'), include_blank: false, class: '', "data-am-selected"=> "{searchBox: 1}", style: "display: none;" %>
									</div>
								</div>

								<div class="am-form-group">
									<label class="am-u-sm-3 am-form-label"><%= New.human_attribute_name :key_words %> <span class="tpl-form-line-small-title"><%= :key_words.to_s.titleize %></span></label>
									<div class="am-u-sm-9">
										<%= text_field_tag :key_words, nil, class: 'tpl-form-input' %>
									</div>
								</div>

<!--								<div class="am-form-group">
									<label for="user-weibo" class="am-u-sm-3 am-form-label">封面图 <span class="tpl-form-line-small-title">Images</span></label>
									<div class="am-u-sm-9">
										<div class="am-form-group am-form-file">
											<div class="tpl-form-file-img">
												<img src="assets/img/a5.png" alt="">
											</div>
											<button type="button" class="am-btn am-btn-danger am-btn-sm">
												<i class="am-icon-cloud-upload"></i> 添加封面图片</button>
											<input id="doc-form-file" type="file" multiple="">
										</div>

									</div>
								</div>-->


<!--								<div class="am-form-group">
									<label for="user-intro" class="am-u-sm-3 am-form-label">显示文章</label>
									<div class="am-u-sm-9">
										<div class="tpl-switch">
											<input type="checkbox" class="ios-switch bigswitch tpl-switch-btn" >
											<div class="tpl-switch-btn-view">
												<div>
												</div>
											</div>
										</div>

									</div>
								</div>-->

								<div class="am-form-group">
									<label for="user-intro" class="am-u-sm-3 am-form-label"><span class="required-hint">*</span><%= New.human_attribute_name :content %> <span class="tpl-form-line-small-title"><%= :content.to_s.titleize %></span></label>
									<div class="am-u-sm-9">
										<%= kindeditor_tag :content, '',
										                   :window_onload => true,
										                   :width => 1198,
										                   :height => 600,
										                   :resizeType => 0
										%>
									</div>
								</div>

								<div class="am-form-group">
									<div class="am-u-sm-9 am-u-sm-push-3">
										<button type="button" class="am-btn am-btn-primary tpl-btn-bg-color-success js-create-new">提交</button>
									</div>
								</div>

							</form>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


<% content_for :title do %>
		管理平台-新增新闻
<% end %>

<% content_for :meta do %>
<% end %>

<% content_for :body_attr do %>data-type="widgets"<% end %>

<% content_for :style do %>
		<%= stylesheet_link_tag 'administration/v1/new/new' %>
<% end %>

<% content_for :script do %>
		<%= javascript_include_tag 'administration/v1/new/new' %>
<% end %>
