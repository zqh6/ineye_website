        <div class="fl doctorPortrait flow">
            <%= image_tag("zj22.jpg") %>
        </div>
        <div class="fl doctorContent flow">
            <h5>张大铮</h5>
            <p class="doctorTitle"><span>副主任医师/医学博士</span></p>
