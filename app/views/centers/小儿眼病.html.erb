<% content_for :script do %>
<script>
    $(document).ready(function(){
        //解析URL拿到锚点
        var url = window.location.href;
        //console.log(url)
        var str = url.split("#",2)[1]
        changes(str)
        function changes(index){
            if(index&&index!=""){
                if(index>=0&&index<=6){
                    index=index
                }
                else{
                    index= 1;
                }
            }else{
                index = 1
            }
        //console.log($(".cureProject a")[index])
        // 相应标签增加背景
        var dom = $(".cureProject a")[index-1]
        $(dom).addClass("active")
        //相应内容展示
        var cureProjectModule = $(".cureProjectContainer .cureProjectModule").eq(index-1)
        //console.log(cureProjectModule)
        $(cureProjectModule).show().siblings().hide()
            //console.log(dom)
        }
        $(".cureProject a").click(function(){

            //console.log($(this).index());
            var index = $(this).index()
            $(this).siblings().removeClass("active")
            changes(index)
            $(".cureProjectContainer .cureProjectModule").eq($(this).index()-1).show().siblings().hide()
        })
    })

</script>
<% end %>
