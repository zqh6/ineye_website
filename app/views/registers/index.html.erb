<div class="regheader">
    <p class="regpageheader">
      <%= image_tag("reglogo.png") %> <span class="operationtle">用户注册</span>
    </p>
</div>
<div class="regarea">
    <div>
        <input type="text" placeholder="手机号：" class="tel" value="" maxlength="11" >
        <div class="remind">
            <%= image_tag("remind.png") %> 建议使用常用手机，便于登录和找回密码
        </div>
        <div class="warnimg hide">
            <%= image_tag("warn.png") %> 号码不正确，请检查输入
        </div>
        <div class="okimg">
            <%= image_tag("ok.png") %>
        </div>
    </div>
    <div class="codeinput flow">
        <input type="text" placeholder="手机验证码：" class="importcode" value="" maxlength="4">
        <div class="getcode">获取短信验证码</div>
        <div class="warnimg hide">
            <%= image_tag("warn.png") %> 验证码不正确
        </div>
        <div class="remind hide">
            <%= image_tag("ok.png") %>
        </div>
    </div>
    <div>
        <input type="text" placeholder="真实姓名：" class="name" value="" maxlength="4">
        <div class="remind">
            <%= image_tag("remind.png") %> 建议填写4位以内的字符
        </div>
        <div class="warnimg hide">
            <%= image_tag("warn.png") %> 姓名不符合规则，请检查输入
        </div>
        <div class="okimg">
            <%= image_tag("ok.png") %>
        </div>
    </div>
    <div>
        <input type="text" placeholder="医院：" class="hospital" value="" maxlength="50">
        <div class="remind">
            <%= image_tag("remind.png") %> 请输入医院/单位名称
        </div>
        <div class="warnimg hide">
            <%= image_tag("warn.png") %> 医院不符合要求，请检查输入
        </div>
        <div class="okimg">
            <%= image_tag("ok.png") %>
        </div>
    </div>
    <div>
        <input type="password" placeholder="设置密码：" class="pwd" value="" >
        <div class="remind">
            <%= image_tag("remind.png") %> 建议使用字母、数字和符号两种以上的组合，6-20位字符
        </div>
        <div class="warnimg hide">
            <%= image_tag("warn.png") %> 密码需要6-20位使用字母、数字和符号两种以上的组合
        </div>
        <div class="okimg">
            <%= image_tag("ok.png") %>
        </div>
    </div>
    <div>
        <input type="password" placeholder="确认密码：" class="surepwd" value="" >
        <div class="remind hide">
            <%= image_tag("remind.png") %>
        </div>
        <div class="warnimg hide">
            <%= image_tag("warn.png") %> 密码不一致
        </div>
        <div class="okimg">
            <%= image_tag("ok.png") %>
        </div>
    </div>
    <div class="regsubmit">
        <input type="submit" value="立即注册" class="subbtn">
    </div>
    <p class="datawarn warnword"></p>
</div>

<div class="regmask hide">
   <div class="succeemain">
       <p class="successword">
        <%= image_tag("smileface.png") %>  恭喜您！注册成功！</p>
       <p>今后您可以使用注册手机号登录银海官网平台，祝你生活愉快！</p>
     <div class="goprev subbtn"><a href="/">前往首页</a></div>
   </div>
</div>

<% content_for :script do %>
<script>
    function checkmsg(phone,obj,reg){
        if(!reg.test(phone)){
            obj.find(".remind").hide();
            obj.find(".okimg").hide();
            obj.find(".warnimg").show();
            return false
        }else {
            obj.find(".remind").hide();
            obj.find(".warnimg").hide()
            obj.find(".okimg").show()
            return true
        }
    }
    function checkpwd() {
        console.log($(".surepwd").val().trim());
        console.log($(".surepwd").val().trim()==$(".pwd").val().trim());
        if($(".surepwd").val().trim()==$(".pwd").val().trim()&&$(".surepwd").val().trim()!=""){
            $(".surepwd").parent().find(".okimg").show();
            $(".surepwd").parent().find(".warnimg").hide();
            return true
        }else {
            $(".surepwd").parent().find(".okimg").hide();
            $(".surepwd").parent().find(".warnimg").show();
            return false
        }
    }
    var countNum = 60;
    var validateCode = 0;
    $(".getcode").click(function(){
        clearInterval(setTime);
        if($(".getcode").html()=="获取短信验证码"){
            var  setTime = setInterval(function(){
            if(countNum<=0){
                clearInterval(setTime);
                countNum =60;
                $(".getcode").html("获取短信验证码");
                return;
            }
            countNum --;
            $(".getcode").html(countNum+"s后才能继续点击");
        },1000)
        }

        if($(".getcode").html()=="获取短信验证码"){
            $.ajax({
                url: '/all-api/validate_codes',
                type: "POST",
                dataType: "json",
                data: {
                   "phone_number": $(".tel").val()
                }

            })
                .done(function( data ) {
                    validateCode = data.collection[0].validate_code
                })
                .fail(function( xhr, status, errorThrown ) {

                })
                .always(function( xhr, status ) {
                });
        }

    })
    function checkcode(){
        console.log($(".importcode").val()+" "+validateCode);
        if($(".importcode").val()== validateCode){
            $(this).parent().find(".warnimg").hide()
            $(this).parent().find(".remind").show();
            return true
        }else{
            $(this).parent().find(".remind").hide();
            $(this).parent().find(".warnimg").show()
            return false
        }
    }
    $(".importcode").blur(function(){
        checkcode();
    })
    $(".tel").blur(function () {
        checkmsg($(".tel").val(),$(".tel").parent(),/^(13[0-9]|14[5|7]|15[0|1|2|3|5|6|7|8|9]|18[0|1|2|3|5|6|7|8|9])\d{8}$/);
    })
    $(".name").blur(function(){
        checkmsg($(".name").val(),$(".name").parent(),/^[\u4E00-\u9FA5A-Za-z]{2,4}$/)
    })
    $(".hospital").blur(function () {
        checkmsg($(".hospital").val(),$(".hospital").parent(),/^[\u4E00-\u9FA5A-Za-z]{2,20}$/)
    })
    $(".pwd").blur(function () {
        checkmsg($(".pwd").val(),$(".pwd").parent(),/^\w{6,20}$/)
    })


    $(".surepwd").blur(function () {
        checkpwd();
    })
    $(".regsubmit input").click(function () {
        if(checkmsg($(".tel").val(),$(".tel").parent(),/^(13[0-9]|14[5|7]|15[0|1|2|3|5|6|7|8|9]|18[0|1|2|3|5|6|7|8|9])\d{8}$/)&&
            checkmsg($(".name").val(),$(".name").parent(),/^[\u4E00-\u9FA5A-Za-z]{2,20}$/)&&
            checkmsg($(".hospital").val(),$(".hospital").parent(),/^[\u4E00-\u9FA5A-Za-z]{2,20}$/)&&
            checkmsg($(".pwd").val(),$(".pwd").parent(),/^(?![\d]+$)(?![a-zA-Z]+$)(?![^\da-zA-Z]+$).{6,20}$/)&&
            checkcode()&&
            checkpwd()
        ){

            $.ajax({
                url: '/all-api/users',
                type: "POST",
                dataType: "json",
                data: {
                   "name": $(".name").val(),
                   "unit_name": $(".hospital").val(),
                   "phone_number": $(".tel").val(),
                   "validate_code": $(".importcode").val(),
                   "password1": $(".pwd").val(),
                   "password2": $(".surepwd").val()
                }

            })
                .done(function( data ) {
                    $(".regmask").show();

                })
                .fail(function( xhr, status, errorThrown ) {
                    $(".datawarn").html(data.message);
                })
                .always(function( xhr, status ) {
                });

        }else {
            console.log("验证不通过");
        }
    })
</script>
<% end %>
